<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trending_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/trending_card_ic"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/ic_flash_circle"
            android:scaleType="fitCenter"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="16dp"/>
        <TextView
            android:id="@+id/trending_card_type"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="8dp"
            android:text="@string/trending"
            android:layout_toEndOf="@id/trending_card_ic"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/option_btn_trending_article"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_article_option"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/date_trending_card"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@id/option_btn_trending_article"
            android:gravity="center_vertical"
            android:text="@string/sample_date"
            android:textSize="12sp"/>
        <View
            android:id="@+id/divider_trending"
            android:layout_below="@id/trending_card_ic"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryGrey"
            android:layout_alignParentStart="true"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider_trending"
            android:layout_alignParentStart="true"
            android:divider="@color/colorTextGrey"/>
        <Button
            android:layout_below="@id/recycler_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_arrow_forward"
            android:text="@string/more_like_this"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="start|center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/colorTextGrey"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>